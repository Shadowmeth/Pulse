{
  "name": "Pulse",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "start:backend": "npm --workspace=backend run start",
    "start:frontend": "npm --workspace=frontend run start",
    "dev": "concurrently \"npm run start:backend\" \"npm run start:frontend\""
  },
  "devDependencies": {
    "concurrently": "^9.2.0"
  }
}
